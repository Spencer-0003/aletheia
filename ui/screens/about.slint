import { Button } from "../components/button.slint";
import { AppLogic } from "../logic/app.slint";

export component About {
  width: 100%;
  height: 100%;

  VerticalLayout {
    spacing: 24px;
    padding: 24px;
    alignment: start;

    VerticalLayout {
      spacing: 16px;

      HorizontalLayout {
        spacing: 12px;

        Text {
          text: @tr("Application Info");
          color: #cdd6f4;
          font-family: "Inter";
          font-size: 18px;
          font-weight: 600;
          vertical-alignment: center;
        }
      }

      VerticalLayout {
        spacing: 12px;
        padding-left: 36px;

        Text {
          text: @tr("Aletheia is an open-source game save backup tool");
          color: #a6adc8;
          font-family: "Inter";
          font-size: 14px;
        }

        Text {
          text: @tr("Version: ") + AppLogic.version;
          color: #a6adc8;
          font-family: "Inter";
          font-size: 14px;
        }

        Text {
          text: @tr("License: ") + "AGPL-3.0";
          color: #a6adc8;
          font-family: "Inter";
          font-size: 14px;
        }

        Text {
          text: @tr("Logo by: ") + "@clanps:usesarchbtw.lol";
          color: #a6adc8;
          font-family: "Inter";
          font-size: 14px;
        }

        HorizontalLayout {
          spacing: 12px;
          padding-top: 8px;

          Button {
            width: 180px;
            height: 38px;
            text: @tr("View Source Code");
            clicked => { AppLogic.open_url("https://github.com/Spencer-0003/aletheia"); }
          }

          Button {
            width: 180px;
            height: 38px;
            text: @tr("View License");
            clicked => { AppLogic.open_url("https://github.com/Spencer-0003/aletheia/blob/master/LICENSE"); }
          }

          Button {
            width: 180px;
            height: 38px;
            text: @tr("Support the Project");
            clicked => { AppLogic.open_url("https://github.com/Spencer-0003/aletheia?tab=readme-ov-file#support-the-project"); }
          }
        }
      }
    }

    Rectangle { height: 1px; background: #45475a; }

    VerticalLayout {
      spacing: 16px;

      HorizontalLayout {
        Text {
          text: @tr("Built with Slint");
          color: #cdd6f4;
          font-family: "Inter";
          font-size: 18px;
          font-weight: 600;
          vertical-alignment: center;
        }
      }

      VerticalLayout {
        spacing: 12px;
        padding-left: 36px;

        Text {
          text: @tr("Slint is a declarative GUI toolkit to build native user interfaces for Rust, C++, or JavaScript apps");
          color: #a6adc8;
          font-family: "Inter";
          font-size: 14px;
          wrap: word-wrap;
        }

        HorizontalLayout {
          padding-top: 8px;

          Button {
            width: 180px;
            height: 38px;
            text: @tr("Learn more about Slint");
            clicked => { AppLogic.open_url("https://slint.dev"); }
          }
        }
      }
    }
  }
}
